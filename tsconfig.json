{
    "compilerOptions": {
        "strict": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true,

        "paths": {
            "#root/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}